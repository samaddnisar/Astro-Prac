---
import CloudNavbar from "../shared/CloudNavbar.astro";
import Container from "../shared/Container.astro";
import SectionName from "../shared/SectionName.astro";
import SectionHeading from "../shared/SectionHeading.astro";
import FoundationCard from "../sections-specific/strong-foundations/FoundationCard.astro";
---

<Container>
  <section>
    <div class="texts">
      <SectionName>Strong Foundation</SectionName>
      <SectionHeading>It starts with Aerospike Database</SectionHeading>
    </div>
    <div class="cards">
      <FoundationCard
        title="Fast like a cache, safe like a database"
        description="Scales from terabytes to petabytes with leading p99 latency,  at massive throughput."
        bottomText="Includes high-trust enterprise features like strong consistency and distributed ACID transactions."
        imageSrc="foundation-card-image-1.png"
        variant="secondary"
      />
      <FoundationCard
        title="Patented cloud costs reduction"
        description="Engineered from the silicon up to reduce your cloud—often by up to 80%."
        bottomText="Learn more about Aerospike’s patented Hybrid Memory Architecture ↗"
        imageSrc="foundation-card-image-2.png"
        variant="primary"
      />
      <FoundationCard
        title="Unrivaled proof in the cloud"
        description="Hyperscale cloud pioneers have achieved years of continuous uptime using Aerospike."
        bottomText="Aerospike Cloud is a database-as-a-service built on the learnings from trillions of transactions."
        imageSrc="foundation-card-image-3.png"
        variant="neutral"
      />
    </div>
  </section>
</Container>
<style>
  section {
    padding: 60px 0 0 0;
  }

  .texts {
    display: flex;
    flex-direction: column;
    gap: 20px;
    text-align: center;
    margin-top: 160px;
  }

  .cards {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 16px;
    margin-top: 100px;
    margin-left: auto;
    margin-right: auto;
  }
  @media (max-width: 768px) {
    .cards {
      grid-template-columns: 1fr;
    }

    .texts {
      margin-top: 50px;
    }
    .cards {
      margin-top: 20px;
    }
  }
</style>
